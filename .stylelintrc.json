{
  "extends": "stylelint-config-htmlacademy",
  "ignoreProperties": [
    "/regex/",
    "string",
    "at-rule-no-vendor-prefix",
    "value-no-vendor-prefix",
    "property-no-vendor-prefix",
    "selector-max-id"
  ],
  "rules": {
    "declaration-no-important": true,
    "indentation": [
      2,
      {
        "ignore": ["inside-parens"]
      }
    ]
  }
}
